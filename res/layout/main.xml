<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="80sp"
            android:layout_marginTop="20sp"
            android:layout_weight="1"
            android:text="@string/text_main"
            android:textColor="@color/black"
            android:textSize="35sp" />

   </LinearLayout>

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_main_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="扫码" />

        <Button
        	android:id="@+id/btn_main_nfc"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="5dp"
			android:layout_marginLeft="5dp"
			android:background="@drawable/rounded_button"
			android:text="NFC" />
	</LinearLayout>
        
	<LinearLayout
		android:layout_weight="1"
		android:layout_width="match_parent"
		android:gravity="center_horizontal"
		android:layout_height="0dp" >
		<GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        android:columnCount="2"
		android:rowCount="6" >
	        <TextView 
			    android:text="操作类型"
			    android:layout_marginLeft="20dp"
		        android:layout_marginRight="20dp"
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="10dp"
		        android:textSize="15dp"
			    android:gravity="center"
			    android:textColor="@color/black"/>
			<TextView 
			    android:text="操作时间"
			    android:layout_marginLeft="20dp"
		        android:layout_marginRight="20dp"
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="10dp"
		        android:textSize="15dp"
			    android:gravity="center"
			    android:textColor="@color/black"/>
			<TextView 
			    android:id="@+id/txt_main_db1_1"
			    android:text=""
			    android:layout_marginLeft="15dp"
		        android:layout_marginRight="15dp"
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="5dp"
		        android:textSize="10dp"
			    android:gravity="center"
			    android:textColor="@color/black"/>
			<TextView 
			    android:id="@+id/txt_main_db2_1"
			    android:text=""
			    android:layout_marginLeft="15dp"
		        android:layout_marginRight="15dp"
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="5dp"
		        android:textSize="10dp"
			    android:textColor="@color/black"/>
			<TextView 
			    android:id="@+id/txt_main_db1_2"
			    android:text=""
			    android:layout_marginLeft="15dp"
		        android:layout_marginRight="15dp"
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="5dp"
		        android:textSize="10dp"
			    android:gravity="center"
			    android:textColor="@color/black"/>
			<TextView 
			    android:id="@+id/txt_main_db2_2"
			    android:text=""
			    android:layout_marginLeft="15dp"
		        android:layout_marginRight="15dp"
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="5dp"
		        android:textSize="10dp"
			    android:textColor="@color/black"/>
			<TextView 
			    android:id="@+id/txt_main_db1_3"
